<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Meal Planning</title>
    {{ range .Manifest.CssFiles }}<link blocking="render" rel="stylesheet" type="text/css" href="{{ . }}">{{ end }}
    {{ range .Manifest.JsFiles }}<script src="{{ . }}"></script>{{ end }}
</head>
<body>
    <h1 class="text-4xl">Meal Planning</h1>
    <div>
    {{ range .Meals }}
        {{ template "meal-day" . }}
    {{ end }}
    </div>
</body>
</html>

{{ define "meal-day" }}
    <div>
        {{ .Date.Format "Mon 02.01."}}
    </div>
    <div>
        {{ .Breakfast }}
    </div>
    <div>
        {{ .Lunch }}
    </div>
    <div>
        {{ .Dinner }}
    </div>
{{ end }}
